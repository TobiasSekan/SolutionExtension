{
    "name": "solutionextension",
    "displayName": "SolutionExtension",
    "description": "Support for Visual Studio Solution Files (*.sln)",
    "publisher": "Tobias Sekan",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sln",
                "aliases": [
                    "Visual Studio Solution",
                    "sln"
                ],
                "extensions": [
                    "sln"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "title": "Enable CodeLens",
                "command": "codelens.enableCodeLens",
                "category": "CodeLens for solution files (*.sln)"
            },
            {
                "title": "Disable Codelens",
                "command": "codelens.disableCodeLens",
                "category": "CodeLens for solution files (*.sln)"
            }
        ],
        "grammars": [
            {
                "language": "sln",
                "scopeName": "text.sln",
                "path": "./syntaxes/sln.tmLanguage.json"
            }
        ]
    },
    "configuration": {
        "properties": {
            "codelens.enableCodeLens": {
                "type": "boolean",
                "default": true
            }
        }
    },
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.34.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "eslint": "^7.1.0",
        "typescript": "^4.0.2"
    }
}
